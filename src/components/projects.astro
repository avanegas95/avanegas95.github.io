---
import { Image } from "astro:assets";

interface Project {
  title: string;
  description: string;
  image: string;
  link: string;
  github: string;
  stack: string[];
  imageWidth: number;
  imageHeight: number;
}

const projects: Project[] = [
  {
    title: "SVGL",
    description:
      "A beautiful library with SVG logos. +100 SVG logos available for free.",
    image: "/images/svgl.png",
    imageWidth: 1200,
    imageHeight: 630,
    link: "https://svgl.vercel.app/",
    github: "https://github.com/pheralb/svgl",
    stack: ["Next.js", "TypeScript", "TailwindCSS"],
  },
  {
    title: "Stockin",
    description:
      "A simple stock management system. Create products, categories and manage your stock.",
    image: "/images/stockin.png",
    imageWidth: 1200,
    imageHeight: 630,
    link: "https://stockin.vercel.app/",
    github: "https://github.com/Gothsec/stockin",
    stack: ["Next.js", "TypeScript", "TailwindCSS", "Supabase"],
  },
  {
    title: "Movies for devs",
    description:
      "A curated list of movies for developers. Watch movies and learn about programming.",
    image: "/images/moviesfordevs.png",
    imageWidth: 1200,
    imageHeight: 630,
    link: "https://moviesfordevs.vercel.app/",
    github: "https://github.com/Gothsec/movies-for-devs",
    stack: ["Next.js", "TypeScript", "TailwindCSS"],
  },
];
---

<section class="py-20 lg:py-32">
  <div class="max-w-5xl mx-auto">
    <div class="space-y-6 md:space-y-12">
      <div class="flex flex-col items-center space-y-4 md:space-y-6">
        <h2 class="text-2xl md:text-4xl font-bold text-center">Projects</h2>
        <p class="text-[var(--white-icon)] text-center max-w-xl">
          Here are some of my projects. I love to build things and learn new
          technologies.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          projects.map((project) => (
            <div class="group relative overflow-hidden rounded-2xl">
              <a href={project.link} target="_blank">
                <img
                  src={project.image}
                  alt={project.title}
                  width={project.imageWidth}
                  height={project.imageHeight}
                  class="w-full h-64 object-cover transition duration-300 ease-in-out group-hover:scale-110"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-black bg-opacity-60 transition duration-300 ease-in-out group-hover:bg-opacity-20" />
                <div class="absolute inset-0 p-6 flex flex-col justify-end">
                  <h3 class="text-xl font-bold mb-2">{project.title}</h3>
                  <p class="text-sm text-[var(--white-icon)] mb-4">
                    {project.description}
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {project.stack.map((tech) => (
                      <span class="text-xs bg-[var(--white-icon-tr)] px-2 py-1 rounded">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

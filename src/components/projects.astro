---
import { Image } from "astro:assets";

interface Project {
  title: string;
  description: string;
  image: string;
  link: string;
  github: string;
  stack: string[];
  status: string;
  imageWidth: number;
  imageHeight: number;
}

const projects: Project[] = [
  {
    title: "MoviesForDevs",
    description: "A curated list of movies for developers. Watch movies and learn about programming.",
    image: "/images/moviesfordevs.png",
    imageWidth: 1200,
    imageHeight: 630,
    link: "https://github.com/avanegas95/MoviesForDevs",
    github: "https://github.com/avanegas95/MoviesForDevs",
    status: "On Development",
    stack: ["Next.js", "TypeScript", "TailwindCSS"],
  },
  {
    title: "StockIn",
    description: "A simple stock management system. Create products, categories and manage your stock.",
    image: "/images/stockin.png",
    imageWidth: 1200,
    imageHeight: 630,
    link: "https://stockin.vercel.app/",
    github: "https://github.com/avanegas95/stockin",
    status: "On Development",
    stack: ["Next.js", "TypeScript", "TailwindCSS", "Supabase"],
  },
  {
    title: "Svgl.app",
    description: "A beautiful library with SVG logos. +100 SVG logos available for free.",
    image: "/images/svgl.png",
    imageWidth: 1200,
    imageHeight: 630,
    link: "https://svgl.vercel.app/",
    github: "https://github.com/avanegas95/svgl",
    status: "Contributor",
    stack: ["Next.js", "TypeScript", "TailwindCSS"],
  },
];
---

<section id="projects" class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Projects</h3>

    <div class="grid gap-8">
      {
        projects.map((project) => (
          <article class="group relative bg-[#1414149c] border border-[var(--white-icon-tr)] rounded-xl overflow-hidden hover:border-[var(--sec)] transition-all duration-300">
            <div class="grid md:grid-cols-2 gap-4 p-6">
              <div class="order-2 md:order-1">
                <header class="mb-4">
                  <h4 class="text-2xl font-medium mb-2">{project.title}</h4>
                  <p class="text-[var(--white-icon)]">{project.description}</p>
                </header>
                <footer class="space-y-4">
                  <ul class="flex flex-wrap gap-2">
                    {project.stack.map((tech) => (
                      <li class="bg-[var(--white-icon-tr)] px-3 py-1 rounded-full text-sm">
                        {tech}
                      </li>
                    ))}
                  </ul>
                  <div class="flex gap-4">
                    <a
                      href={project.github}
                      target="_blank"
                      class="flex items-center gap-2 text-[var(--white-icon)] hover:text-[var(--sec)] transition-colors"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z" />
                      </svg>
                      <span>View Code</span>
                    </a>
                    <a
                      href={project.link}
                      target="_blank"
                      class="flex items-center gap-2 text-[var(--white-icon)] hover:text-[var(--sec)] transition-colors"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M10 6V8H5V19H16V14H18V20C18 20.5523 17.5523 21 17 21H4C3.44772 21 3 20.5523 3 20V7C3 6.44772 3.44772 6 4 6H10ZM21 3V11H19V6.413L11.207 14.207L9.793 12.793L17.585 5H13V3H21Z" />
                      </svg>
                      <span>View Project</span>
                    </a>
                  </div>
                </footer>
              </div>
              <div class="order-1 md:order-2">
                <Image
                  src={project.image}
                  alt={project.title}
                  width={project.imageWidth}
                  height={project.imageHeight}
                  class="rounded-lg border border-[var(--white-icon-tr)] group-hover:border-[var(--sec)] transition-all duration-300"
                />
              </div>
            </div>
          </article>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <p class="text-[var(--white-icon)] mb-8">More projects coming soon...</p>
      <a
        target="_blank"
        href="https://github.com/avanegas95?tab=repositories"
        aria-label="GitHub"
        class="inline-flex items-center gap-2 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] px-6 py-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
      >
        <span class="md:text-lg text-md">View all repositories</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="size-6"
        >
          <path d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z" />
        </svg>
      </a>
    </div>
  </div>
</section>
